<?xml version="1.0" encoding="utf-8"?>
<TableLayout 
	android:layout_height="fill_parent" 
	android:layout_width="fill_parent"
	android:orientation="vertical"
	android:stretchColumns="1"
	xmlns:android="http://schemas.android.com/apk/res/android">
	
	<TableRow android:layout_width="fill_parent" android:padding="5px"
		android:layout_marginTop="5px" android:layout_marginBottom="5px">
		<TextView android:id="@+id/text1" android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:layout_marginTop="10px"
			android:text="TITLE" android:textSize="22sp" android:typeface="monospace"
			android:textStyle="bold" android:gravity="left">
		</TextView>
		<EditText android:id="@+id/tasktitle" 
			android:textSize="18sp" android:layout_marginLeft="10px"
			android:layout_marginRight="10px" />
	</TableRow>
	
	<TableRow android:layout_width="fill_parent" android:padding="5px"
		android:layout_marginTop="5px" android:layout_marginBottom="5px">
		<TextView android:id="@+id/text2" android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:layout_marginTop="10px"
			android:text="CATEGORY" android:textSize="22sp" android:typeface="monospace"
			android:textStyle="bold" android:gravity="left">
		</TextView>
		<Spinner android:id="@+id/Category" android:layout_marginLeft="10px"
			android:layout_marginRight="10px" />
	</TableRow>
	
	<TableRow android:layout_width="fill_parent" android:padding="5px"
		android:layout_marginTop="5px" android:layout_marginBottom="5px">
		<TextView android:id="@+id/text3" android:layout_marginTop="10px"
			android:text="TIME" android:textSize="22sp" android:typeface="monospace"
			android:textStyle="bold" android:gravity="left">
		</TextView>
		<TextView android:id="@+id/timetext" android:layout_marginTop="10px"
			android:text="" android:textSize="22sp" android:typeface="monospace"
			android:textStyle="bold" android:gravity="left">
		</TextView>
	</TableRow>
	
	<Button android:id="@+id/button1" android:text="+5" />
	<Button android:id="@+id/button2" android:text="+10" />
	<Button android:id="@+id/button3" android:text="+30" />
	<Button android:id="@+id/button4" android:text="+60" />
		
	<Button android:id="@+id/submit"
		android:layout_width="fill_parent" android:text="DONE!" />
</TableLayout>